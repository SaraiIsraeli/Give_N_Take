
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/hands_shake</item>
    </style>

    <style name="AppThemeTwo1" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#fff</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#1a237e</item>
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">#f4511e</item>
    </style>

    <style name="ThumbSlider" parent="Widget.AppCompat.SeekBar">
        <item name="android:color">@color/colorAccent</item>
    </style>

    <style name="AppThemeThree" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>