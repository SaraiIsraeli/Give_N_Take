<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SearchSettingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashbg">

    <TextView
        android:id="@+id/register_Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="201dp"
        android:layout_marginLeft="201dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="true"
        android:text="@string/SearchSettings"
        android:textAlignment="center"
        android:textColor="@color/colorSplashtext"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="@font/comicbold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="79dp"
        android:saveEnabled="true"
        android:text="מרחק חיפוש:"
        android:textColor="@color/colorSplashtext"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text=":מרחק חיפוש" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/AppThemeTwo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:max="200"
        android:minWidth="3dp"
        android:progress="10"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="192dp"
        android:text="הגדרות מתקדם"
        android:textColor="@color/colorSplashtext"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="הגדרות מתקדם" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="256dp"
        android:text="..אני מחפש "
        android:textColor="@color/colorSplashtext"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="אני מחפש.." />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textColorHint="@color/colorAccent"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ProductSearch"
            style="@style/AppThemeThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:hint="הקלד שם מוצר"
            android:textColor="@color/colorAccent" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/SaveSettings_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="שמור הגדרות" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="679dp"
        android:text="חזור" />

    <TextView
        android:id="@+id/SliderValue"
        android:layout_width="118dp"
        android:layout_height="33dp"
        android:layout_marginTop="79dp"
        android:text=" 0 KM"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/Role_Get_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="380dp"
        android:textColor="@color/colorAccent"
        android:saveEnabled="true"
        android:textStyle="bold"
        android:text="לחפש מוצר" />

    <CheckBox
        android:id="@+id/Role_Give_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="430dp"
        android:saveEnabled="true"
        android:text="לתת מוצר"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="380dp"
        android:text="@string/Role"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>