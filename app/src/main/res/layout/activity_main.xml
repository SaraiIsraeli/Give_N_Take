<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashbg"
    android:layoutDirection="rtl">

    <Button
        android:id="@+id/myProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/searchButton"
        android:layout_marginEnd="38dp"
        android:background="@drawable/round_button"
        android:text="פרופיל אישי"
        android:layout_marginRight="38dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/itemsButton"
        android:layout_marginStart="37dp"
        android:background="@drawable/round_button"
        android:text="הגדרות חיפוש"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp" />

    <Button
        android:id="@+id/itemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_button"
        android:text="המוצרים שלי" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="263dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/hands_shake"/>

    <Button
        android:id="@+id/noButoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/myProfileButton"
        android:layout_marginBottom="55dp"
        android:background="@drawable/round_button"
        android:text="לא"
        android:layout_alignLeft="@+id/searchButton" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchButton"
        android:layout_alignTop="@+id/noButoon"
        android:background="@drawable/round_button"
        android:text="כן"
        android:layout_alignLeft="@+id/myProfileButton" />

</RelativeLayout>
