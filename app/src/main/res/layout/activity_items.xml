<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Items">


    <Button
        android:id="@+id/ItemsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="200px"
        android:layout_marginTop="15px"
        android:text="מוצר חדש" />

    <Button
        android:id="@+id/HistoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="600px"
        android:layout_marginTop="15px"
        android:text="היסטוריית מוצרים" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemName"
        android:hint="שם המוצר"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/ItemsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35px"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemDesc"
        android:hint="ספר על המוצר"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/ItemName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35px"/>

    <RadioButton
        android:id="@+id/LocationRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מיקום נוכחי"
        android:layout_below="@id/ItemDesc"
        android:layout_marginTop="35px"
        android:layout_marginLeft="400px"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LocationET"
        android:hint="בחר מיקום"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@id/LocationRB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35px"/>

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזור"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>