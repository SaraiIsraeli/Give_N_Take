<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashbg">

    <TextView
        android:id="@+id/headline_splash"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:includeFontPadding="true"
        android:text="לתת ולקחת"
        android:textAlignment="center"
        android:textColor="@color/colorSplashtext"
        android:textSize="65sp"
        android:textStyle="bold"
        app:fontFamily="@font/comicsfont" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="293dp"
        android:layout_height="314dp"
        android:layout_centerInParent="true"
        android:src="@drawable/hands" />

    <TextView
        android:id="@+id/text_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="22dp"
        android:includeFontPadding="true"
        android:text="@string/splash_screen"
        android:textAlignment="center"
        android:textColor="@color/colorSplasheadline"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/comicsfont" />


</RelativeLayout>